            "system_settings": false,
            "system_backups": false,
            "support_manage": true
          }
        }
      }
    },

    "15. Update Admin Password (Super Admin Only)": {
      "method": "PUT",
      "url": "{{base_url}}/admins/2",
      "headers": {
        "Authorization": "Bearer {{super_admin_token}}",
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "body": {
        "password": "newpassword123",
        "password_confirmation": "newpassword123"
      },
      "response_example": {
        "message": "Admin updated successfully",
        "admin": {
          "id": 2,
          "name": "Admin Name",
          "email": "admin@example.com",
          "role": "admin"
        }
      }
    },

    "16. Delete Admin (Super Admin Only)": {
      "method": "DELETE",
      "url": "{{base_url}}/admins/2",
      "headers": {
        "Authorization": "Bearer {{super_admin_token}}",
        "Accept": "application/json"
      },
      "response_example": {
        "message": "Admin deleted successfully"
      }
    },

    "17. Update Supplier Profile": {
      "method": "PUT",
      "url": "{{base_url}}/supplier/profile",
      "headers": {
        "Authorization": "Bearer {{supplier_token}}",
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "body": {
        "name": "Updated Supplier Name",
        "phone": "01234567890",
        "business_name": "Updated Business Name",
        "business_type": "Retail",
        "service_distance": 50.5,
        "business_categories": ["Category 1", "Category 2"],
        "keywords": ["keyword1", "keyword2"],
        "target_market": ["Market 1", "Market 2"],
        "services_offered": ["Service 1", "Service 2"],
        "website": "https://example.com",
        "additional_phones": ["01234567891", "01234567892"],
        "business_address": "123 Main St",
        "latitude": 30.0444,
        "longitude": 31.2357,
        "working_hours": {
          "monday": {"open": "09:00", "close": "17:00"},
          "tuesday": {"open": "09:00", "close": "17:00"}
        },
        "has_branches": true
      },
      "response_example": {
        "message": "Profile updated successfully",
        "user": {
          "id": 1,
          "name": "Updated Supplier Name",
          "email": "supplier@example.com",
          "phone": "01234567890",
          "profile": {
            "business_name": "Updated Business Name",
            "business_type": "Retail"
          }
        }
      }
    },

    "18. Update Supplier Profile Image": {
      "method": "POST",
      "url": "{{base_url}}/supplier/profile/image",
      "headers": {
        "Authorization": "Bearer {{supplier_token}}",
        "Accept": "application/json"
      },
      "body": {
        "profile_image": "[FILE - multipart/form-data]"
      },
      "note": "Use form-data in Postman, key: 'profile_image', type: File",
      "response_example": {
        "message": "Profile image updated successfully",
        "user": {
          "id": 1,
          "name": "Supplier Name",
          "email": "supplier@example.com",
          "profile_image": "uploads/suppliers/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx.jpg"
        }
      }
    }
  },

  "notes": {
    "authentication": "Most endpoints require Bearer token in Authorization header",
    "super_admin_only": "Admin management endpoints (10-16) require Super Admin role",
    "supplier_only": "OTP and password reset endpoints (2-5) are for suppliers only",
    "permissions": "Regular admins have permissions object, super admins have null permissions",
    "base_url": "Replace {{base_url}} with your actual API base URL",
    "tokens": "Replace {{access_token}}, {{super_admin_token}}, {{supplier_token}} with actual tokens from login"
  }
}


